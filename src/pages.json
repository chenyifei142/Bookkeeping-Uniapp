{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarBackgroundColor": "#F2F2F2",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/home/components/addBillRecord",
      "style": {
        "navigationStyle": "custom",
        "navigationBarBackgroundColor": "#F2F2F2",
        "enablePullDownRefresh": false,
        "disableScroll": true
      }
    },
    {
      "path": "pages/CategoryManagement/index",
      "style": {
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTitleText": "",
        "enablePullDownRefresh": false,
        "disableScroll": true
      }
    },
    {
      "path": "pages/statistics/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarBackgroundColor": "#F2F2F2",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarBackgroundColor": "#F2F2F2",
        "enablePullDownRefresh": false
      }
    }
  ],
  "tabBar": {
    "custom": true,
    "color": "#ffffff",
    "selectedColor": "#ffffff",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/index",
        "text": "首页",
        "iconPath": "static/tabBar/tally.png",
        "selectedIconPath": "static/tabBar/tally-active.png"
      },
      {
        "pagePath": "pages/statistics/index",
        "text": "统计",
        "iconPath": "static/tabBar/scat.png",
        "selectedIconPath": "static/tabBar/scat-active.png"
      },
      {
        "pagePath": "pages/my/index",
        "text": "我的",
        "iconPath": "static/tabBar/user.png",
        "selectedIconPath": "static/tabBar/user-active.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "记账鸭",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
